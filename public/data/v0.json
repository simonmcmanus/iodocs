{
    "endpoints": [
        {
            "name": "AdBank Assets",
            "methods": [
                {
                    "MethodName": "Assets List",
                    "Synopsis": "List all assets, or search by fields specified using the query param.",
                    "URI": "/assets",
                    "HTTPMethod": "GET",
                    "parameters": [
                        {
                            "Name": "query",
                            "Required": "N",
                            "Type": "string",
                            "Description": "Lucene search term (http://lucene.apache.org/core/2_9_4/queryparsersyntax.html), eg: `brand:BT Beam Uploads`. Limited to 3 levels of complexity. If not is specified will return a list of all the assets you have access to."
                        },
                        {
                            "Name": "page",
                            "Required": "N",
                            "Default": 1,
                            "Location": "query",
                            "Type": "int",
                            "Description": "The page number, if there are more pages the more property will be true"
                        },
                        {
                            "Name": "sort",
                            "Required": "N",
                            "Location": "query",
                            "Type": "string",
                            "Description": "Sort the results by a specified fields"
                        },
                        {
                            "Name": "size",
                            "Required": "N",
                            "Location": "query",
                            "Default": 10,
                            "Type": "int",
                            "Description": "Sort the results by a spec  ified fields"
                        },
                        {
                            "Name": "order",
                            "Required": "N",
                            "Location": "query",
                            "Default": "ASC",
                            "Type": "string",
                            "Description": "How to order the fields, ASC or DESC"
                        }
                    ]
                },
                {
                    "MethodName": "Get an Asset",
                    "Synopsis": "Get an Asset by it`s id.",
                    "URI": "/assets/:id",
                    "HTTPMethod": "GET",
                    "parameters": [
                        {
                            "Name": "id",
                            "Required": "Y",
                            "Type": "int",
                            "Description": "The ID of the asset you wish to fetch."
                        }
                    ]
                },
                {
                    "MethodName": "Update an Asset",
                    "URI": "/assets/:id",
                    "HTTPMethod": "PUT",
                    "parameters": [
                        {
                            "Name": "id",
                            "Required": "Y",
                            "Type": "string",
                            "Description": "The ID of the asset you wish to update."
                        },
                        {
                            "Name": "body",
                            "Required": true,
                            "Type": "json",
                            "Description": "The new meta data for the asset you are updating."
                        }
                    ]
                }
            ]
        },
